{
  "description": "claude-self-obs â€” emit OTLP spans for every Claude Code tool call and agent lifecycle event",
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/emit-span.sh\"",
            "timeout": 2,
            "async": true
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/emit-agent-start.sh\"",
            "timeout": 2,
            "async": true
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/emit-agent-stop.sh\"",
            "timeout": 2,
            "async": true
          }
        ]
      }
    ]
  }
}
