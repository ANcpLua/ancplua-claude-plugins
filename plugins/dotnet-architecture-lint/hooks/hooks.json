{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/inject-dotnet-rules.sh",
            "timeout": 5,
            "statusMessage": "Loading .NET architecture rules..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/precheck-dotnet.py",
            "timeout": 5,
            "statusMessage": "Checking .NET architecture constraints..."
          }
        ]
      }
    ]
  }
}
