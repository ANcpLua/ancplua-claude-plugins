{
  "name": "workflow-orchestrator",
  "version": "0.1.0",
  "description": "Autonomous agent that coordinates CI/CD workflows by chaining plugins into pipelines",
  "extends": "../../agents/AGENTS_BASE.md",
  "author": {
    "name": "AncpLua",
    "url": "https://github.com/ANcpLua"
  },
  "repository": "https://github.com/ANcpLua/ancplua-claude-plugins",
  "license": "MIT",
  "plugins": {
    "required": ["autonomous-ci", "code-review", "smart-commit"],
    "optional": ["jules-integration"]
  },
  "skills": {
    "provided": ["workflow-orchestration"],
    "consumed": [
      "autonomous-ci",
      "code-review",
      "smart-commit",
      "jules-integration",
      "systematic-debugging",
      "test-driven-development",
      "verification-before-completion"
    ]
  },
  "pipelines": {
    "pre-commit": {
      "description": "Validate, review, and prepare commit",
      "steps": [
        {
          "name": "validate",
          "action": "script",
          "path": "./tooling/scripts/local-validate.sh",
          "on_failure": "abort"
        },
        {
          "name": "review",
          "action": "skill",
          "skill": "code-review",
          "on_failure": "report"
        },
        {
          "name": "commit-message",
          "action": "skill",
          "skill": "smart-commit",
          "on_failure": "report"
        }
      ]
    },
    "pr-create": {
      "description": "Full pipeline from validation to PR creation",
      "steps": [
        {
          "name": "pre-commit",
          "action": "pipeline",
          "pipeline": "pre-commit",
          "on_failure": "abort"
        },
        {
          "name": "delegate-pr",
          "action": "skill",
          "skill": "jules-integration",
          "on_failure": "report"
        }
      ]
    },
    "ci-recover": {
      "description": "Diagnose and fix CI failures",
      "steps": [
        {
          "name": "diagnose",
          "action": "skill",
          "skill": "systematic-debugging",
          "on_failure": "escalate"
        },
        {
          "name": "fix",
          "action": "agent",
          "on_failure": "escalate"
        },
        {
          "name": "validate",
          "action": "script",
          "path": "./tooling/scripts/local-validate.sh",
          "on_failure": "retry",
          "max_retries": 3
        }
      ]
    }
  },
  "settings": {
    "auto_retry_on_failure": true,
    "max_retries": 3,
    "retry_delays_seconds": [5, 15, 30],
    "changelog_awareness": true,
    "require_human_approval": ["git commit", "git push", "pr-merge"]
  }
}
