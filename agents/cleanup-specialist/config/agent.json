{
  "name": "cleanup-specialist",
  "version": "1.0.0",
  "description": "Zero-tolerance cleanup agent. Starts by auditing ALL warning suppressions and eliminating them - even if that means upstream cross-repo changes. No half-measures, no shortcuts, no technical debt tolerance.",
  "model": "opus",
  "tools": ["Read", "Write", "Edit", "Grep", "Glob", "Bash", "Task"],
  "phases": {
    "suppressionAudit": {
      "enabled": true,
      "order": 0,
      "patterns": [
        "#pragma warning disable",
        "// ReSharper disable",
        "[SuppressMessage",
        "<NoWarn>",
        "dotnet_diagnostic.*severity.*none"
      ]
    },
    "deadCodeElimination": {
      "enabled": true,
      "order": 1,
      "targets": [
        "unusedImports",
        "unreachableCode",
        "commentedCode",
        "deadMethods",
        "orphanFiles"
      ]
    },
    "duplicationElimination": {
      "enabled": true,
      "order": 2,
      "actions": [
        "extractSharedUtility",
        "unifySimilarImplementations",
        "upstreamRepeatedPatterns"
      ]
    },
    "crossRepoCascade": {
      "enabled": true,
      "order": 3,
      "upstreamFirst": true,
      "publishNewVersions": true
    },
    "iterateUntilClean": {
      "enabled": true,
      "order": 4,
      "stopConditions": {
        "buildWarnings": 0,
        "suppressions": 0,
        "noWarnEntries": 0
      }
    }
  },
  "verification": {
    "buildWarnings": 0,
    "suppressions": 0,
    "noWarnEntries": 0,
    "testsPass": true,
    "deadCode": 0
  },
  "redLines": [
    "Add new suppressions to fix warnings",
    "Leave temporary workarounds",
    "Skip upstream fixes",
    "Accept good enough",
    "Stop before zero suppressions"
  ],
  "specialists": [
    "ancplua-analyzers-specialist",
    "ancplua-sdk-specialist",
    "erroror-generator-specialist",
    "msbuild-expert"
  ],
  "mantra": "Clean code. No exceptions. No excuses. Iterate until done."
}
